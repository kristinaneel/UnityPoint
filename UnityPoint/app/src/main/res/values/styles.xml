<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#a9a9a9</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#00529b</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#00529b</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="UnityPoint" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">#E8F0F6</item>
        <item name="colorAccent">@color/primary_dark_material_light_1</item>
        <item name="colorPrimaryDark">@android:color/tertiary_text_light</item>
    </style>

</resources>
